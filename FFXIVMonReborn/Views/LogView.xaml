        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIVMonReborn"
        mc:Ignorable="d"
        Title="Log" Width="719.823" Height="283.202" Closing="ScriptDebugView_OnClosing">
